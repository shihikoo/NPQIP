@model NPQIP.ViewModel.ReviewerQualityCheckViewModel

@{
    ViewBag.Title = "Review Quality Check: " + Model.ReviewerName;
}

<h2>@ViewBag.Title</h2>


<div class="col-xs-12">
    <div class="col-md-8 col-md-offset-2">
        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>Training Publication</th>
                <th>Score</th>
                <th>Time Completed</th>
                <th></th>
            </tr>
            </thead>

            @foreach (var item in Model.TrainingScoreVMs)
            {
                <tr>
                    <td>
                        @item.PublicationPublicationID
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Score)


                        @*@String.Format("{0,14:P1}", item.Score)*@
                    </td>

                    <td>@item.ScoreTime</td>

                    <td>
                        <a href="@Url.Action("Read", "Review", new {id = item.PublicationPublicationID})" target="_blank">
                            <i class="fa fa-book fa-lg"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>

        
    </div>
</div>
<div class="col-xs-12">
    <div class="col-md-8 col-md-offset-2">
        <table class="table table-striped table-hover ">
            <thead>
                <tr>

                    <th>Review Publication</th>
                    <th>Agreement Percentage</th>
                    <th>Time Completed</th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model.ReviewComparisonVMs)
            {
                <tr>
                    <td>
                        @item.PublicationID
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Agreement)
                        @*@String.Format("{0,14:P1}", item.Agreement)*@
                    </td>

                    <td>@item.LastUpdateDateTime</td>

                    <td>
                        <a href="@Url.Action("Read", "Review", new {id = item.PublicationID})" target="_blank">
                            <i class="fa fa-book fa-lg"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>


    </div>
</div>

