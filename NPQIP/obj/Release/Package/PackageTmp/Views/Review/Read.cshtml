@model IEnumerable<NPQIP.ViewModel.UploadViewModel>
@{
    ViewBag.Title = "Read";
}

<br />
<h4>You current have <strong>@ViewBag.N documents </strong>for <span class="green">manuscript No. @Model.FirstOrDefault().PublicationPublicationID </span></h4>
<br />
@if (ViewBag.N > 0)
{
    <table class="table  table-striped col-sm-12">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileExtention)
            </th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Download File", "DownloadDocument", "Upload",new { fileNumber = item.FileID, id = "ManuscriptNo" + item.PublicationPublicationID.ToString()}, new {target="_blank"})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileExtention)
                </td>             
            </tr>
        }
    </table>
}
<br />

