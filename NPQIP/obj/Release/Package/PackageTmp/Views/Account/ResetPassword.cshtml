@model NPQIP.Models.ResetPasswordModel
 
@{
   ViewBag.Title = "ResetPassword";
}
 
<h2>Reset Password</h2>



@if (ViewBag.Message == "Successfully Changed")
{
    
    <div id="formSubmitSuccess" class="alert alert-success  fade in" role="alert">
         Your password has been successfully changed.
    </div>
}
@if (ViewBag.Message == "Something went wrong!")
{ 
    <div id="formSubmitFail" class="alert alert-danger  fade in" role="alert">
         Your password was not changed successfully. Some error has happened. Please try again later.
    </div>
    
     <div class="col-sm-12">
     @Html.ActionLink("Back to Home", "Index", "Home")
    </div>

}

@if(ViewBag.Message == "") {
<section class="col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2">
@using (Html.BeginForm())
{
   @Html.AntiForgeryToken()
   @Html.ValidationSummary(true)

            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })

         @Html.HiddenFor(m => m.ReturnToken)
    <br />
                <button type="submit" class="btn btn-default btn-lg center-block">Reset Password</button>


}
     </section>
}  

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}