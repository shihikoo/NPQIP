@model IEnumerable<NPQIP.ViewModel.TrainingProgressViewModel>

@{
    if(Model.Count() > 0)
    {
    ViewBag.Title = "Training progress for publication " + @Model.FirstOrDefault().PublicationPublicationID + "(" + @Model.FirstOrDefault().NumberOfReviewers + " trained)"; 
    }
    {
        ViewBag.Title = "No training has been done with this publication.";
    }
    }
<h2>@ViewBag.Title</h2>

<div>
    @Html.EditorForModel()
</div>
